<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <gradient android:startColor="@color/color_FF9F39" android:endColor="@color/color_FF6C39" android:angle="0"/>

            <corners android:radius="22dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="@color/color_FACA99" android:endColor="@color/color_FAB199" android:angle="0"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>
</selector>